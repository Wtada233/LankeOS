pkgname=lpkg
pkgver=0.1.1
pkgrel=1
pkgdesc="LankeOS Package Manager"
arch=('x86_64')
url="https://github.com/Wtada233/LankeOS"
license=('GPL-3.0-or-later')
options=(!debug)
depends=('glibc' 'libarchive' 'curl' 'openssl' 'fmt')
makedepends=('gcc' 'make' 'libarchive' 'curl' 'openssl' 'fmt')
source=() # No external source to fetch, we use the local directory
sha256sums=() # No checksums needed for local source

build() {
  make clean
  make
}

package() {
  make install DESTDIR="$pkgdir"
}
